<%= form_with model: @product do |form| %>
    <% @product.errors.full_messages.each do  |error| %>
        <div>
            <%= error %>
        </div>
    <% end %>

    <div>
        <%= form.label :title %>
        <%= form.text_field :title, required: true%>
    </div>
    
    <div>
        <%= form.label :description %>
        <%= form.text_area :description, required: true %>
    </div>

    <div>
        <%= form.label :price %>
        <%= form.number_field :price, required: true %>
    </div>
    
    <div>
        <%= form.label :category_id %>
        <%= form.collection_select :category_id, Category.all.order(name: :asc), :id, :name %> 
    </div>

    <div>
        <%= form.label :foto %>
        <%= form.file_field :foto %>
    </div>

    <%= form.submit %>

<% end %>